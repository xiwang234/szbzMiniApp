<view class="tab-bar">
  <view 
    class="tab-item {{selected === 0 ? 'active' : ''}}" 
    bindtap="switchTab" 
    data-index="0"
    data-path="/pages/wenji/wenji"
  >
    <view class="tab-icon">
      <view class="icon-divine {{selected === 0 ? 'active' : ''}}">
        <view class="divine-circle"></view>
        <view class="divine-question">?</view>
        <view class="divine-shine divine-shine-1"></view>
        <view class="divine-shine divine-shine-2"></view>
      </view>
    </view>
    <text class="tab-text">问吉</text>
  </view>
  
  <view 
    class="tab-item {{selected === 1 ? 'active' : ''}}" 
    bindtap="switchTab" 
    data-index="1"
    data-path="/pages/index/index"
  >
    <view class="tab-icon">
      <view class="icon-road {{selected === 1 ? 'active' : ''}}">
        <view class="road-line road-line-left"></view>
        <view class="road-line road-line-right"></view>
        <view class="road-horizon"></view>
      </view>
    </view>
    <text class="tab-text">吉途</text>
  </view>
</view>

