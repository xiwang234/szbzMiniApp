/* pages/wenji-result/wenji-result.wxss */
.container {
  min-height: 100vh;
  background: #FFF5F5;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #FFE8E8;
  border-top-color: #C8102E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.retry-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #E63946 0%, #C8102E 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 结果容器 */
.result-container {
  background: white;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(200, 16, 46, 0.12);
}

.result-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #FFE8E8;
}

.result-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #C8102E;
  letter-spacing: 4rpx;
}

/* 结果内容 */
.result-content {
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 28rpx;
  background: #C8102E;
  margin-right: 12rpx;
  border-radius: 3rpx;
}

.section-content {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #666;
  padding: 20rpx 30rpx;
  background: #FFF5F5;
  border-radius: 16rpx;
  border: 2rpx solid #FFE8E8;
}

.analysis-content {
  white-space: pre-wrap;
  word-break: break-all;
}

/* 返回按钮 */
.back-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #E63946 0%, #C8102E 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(230, 57, 70, 0.3);
}

.back-btn::after {
  border: none;
}
