/* pages/wenji-result/wenji-result.wxss */
.container {
  height: 100vh;
  background: #FFF5F5;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* ========== 等待加载动画 ========== */
.loading-container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF5F5;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 神秘圆圈动画 */
.mystical-circle {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 80rpx;
}

.circle-outer,
.circle-middle,
.circle-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  border-style: solid;
}

.circle-outer {
  width: 200rpx;
  height: 200rpx;
  border-width: 4rpx;
  border-color: #C8102E transparent #C8102E transparent;
}

.circle-middle {
  width: 140rpx;
  height: 140rpx;
  border-width: 3rpx;
  border-color: transparent #E63946 transparent #E63946;
}

.circle-inner {
  width: 80rpx;
  height: 80rpx;
  border-width: 2rpx;
  border-color: #C8102E #C8102E transparent transparent;
}

.center-dot {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background: #C8102E;
  border-radius: 50%;
  box-shadow: 0 0 20rpx rgba(200, 16, 46, 0.6);
}

/* 旋转动画 */
@keyframes rotating {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

@keyframes rotating-reverse {
  from {
    transform: translate(-50%, -50%) rotate(360deg);
  }
  to {
    transform: translate(-50%, -50%) rotate(0deg);
  }
}

@keyframes pulsing {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 0.7;
  }
}

.rotating {
  animation: rotating 3s linear infinite;
}

.rotating-reverse {
  animation: rotating-reverse 2s linear infinite;
}

.pulsing {
  animation: pulsing 2s ease-in-out infinite;
}

/* 等待文案 */
.loading-tip {
  text-align: center;
  padding: 0 60rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #C8102E;
  font-weight: 500;
  letter-spacing: 2rpx;
  line-height: 50rpx;
}

/* 文案淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.6s ease-out;
}

/* ========== 结果内容区域 ========== */

/* 滚动区域 - 占满整个屏幕 */
.result-scroll {
  flex: 1;
  padding: 40rpx 30rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 结果容器 */
.result-container {
  background: white;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(200, 16, 46, 0.12);
  min-height: 100%;
}

.result-header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #FFE8E8;
}

.result-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #C8102E;
  letter-spacing: 4rpx;
}

/* 结果内容 */
.result-content {
  padding-bottom: 20rpx;
}

.section {
  margin-bottom: 0;
}

.result-section {
  margin-bottom: 0;
}

.section-content {
  font-size: 30rpx;
  line-height: 56rpx;
  color: #333;
  padding: 40rpx 30rpx;
  background: #FFF5F5;
  border-radius: 16rpx;
  border: 2rpx solid #FFE8E8;
}

/* 分析内容区域 - 拉长显示面积 */
.analysis-content {
  min-height: 600rpx;
}

.analysis-text {
  white-space: pre-wrap;
  word-break: break-word;
  display: block;
}
