<!--pages/wenji-result/wenji-result.wxml-->
<view class="container">
  <!-- 等待加载动画 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading-content">
      <!-- 创意动画效果 -->
      <view class="mystical-circle">
        <view class="circle-outer rotating"></view>
        <view class="circle-middle rotating-reverse"></view>
        <view class="circle-inner pulsing"></view>
        <view class="center-dot"></view>
      </view>
      
      <!-- 等待文案 -->
      <view class="loading-tip fade-in">
        <text class="tip-text">{{loadingTips[currentTipIndex]}}</text>
      </view>
    </view>
  </view>

  <!-- 结果内容 -->
  <scroll-view class="result-scroll" scroll-y="true" wx:if="{{!loading && resultData}}">
    <view class="result-container">
      <view class="result-header">
        <text class="result-title">分析结果</text>
      </view>

      <view class="result-content">
        <!-- 分析结果 - 展示 prediction 字段 -->
        <view class="section result-section">
          <view class="section-content analysis-content">
            <text class="analysis-text">{{resultData.prediction || '暂无分析结果'}}</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
