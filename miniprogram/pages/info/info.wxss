/* pages/info/info.wxss */
.info-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F5 0%, #FFE8E8 100%);
}

/* ========== 信息展示区 ========== */
.info-section {
  padding: 40rpx 30rpx;
}

/* 分析内容 - 纯文本 */
.analysis-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(200, 16, 46, 0.08);
}

.content-text {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333;
  text-align: justify;
  white-space: pre-wrap;
}

/* 加载中 */
.loading-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #FFE8E8;
  border-top-color: #C8102E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/* 错误提示 */
.error-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.retry-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #E63946 0%, #C8102E 100%);
  color: white;
  border: none;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.retry-btn::after {
  border: none;
}

/* ========== 付费选择区 ========== */
.payment-section {
  padding: 40rpx 30rpx 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* Tab 切换 */
.plan-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.plan-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 140rpx;
  background: #FFF5F5;
  border: 3rpx solid #FFE8E8;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.plan-tab.active {
  background: linear-gradient(135deg, #E63946 0%, #C8102E 100%);
  border-color: #C8102E;
  box-shadow: 0 6rpx 20rpx rgba(200, 16, 46, 0.3);
  transform: scale(1.05);
}

.tab-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 10rpx;
}

.plan-tab.active .tab-name {
  color: white;
}

.tab-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #C8102E;
}

.plan-tab.active .tab-price {
  color: white;
}

/* 支付按钮 */
.pay-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #E63946 0%, #C8102E 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(230, 57, 70, 0.3);
}

.pay-button::after {
  border: none;
}
