/* pages/info/info.wxss */
.info-page {
  height: 100vh;
  background: #FFF5F5;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* ========== 加载中 ========== */
.loading-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #FFE8E8;
  border-top-color: #C8102E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/* ========== 错误提示 ========== */
.error-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.retry-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #E63946 0%, #C8102E 100%);
  color: white;
  border: none;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.retry-btn::after {
  border: none;
}

/* ========== 分析结果区域 ========== */

/* 滚动区域 - 占满整个屏幕 */
.result-scroll {
  flex: 1;
  padding: 30rpx 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 结果容器 - 占满可用空间 */
.result-container {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(200, 16, 46, 0.12);
  height: 100%;
  display: flex;
  flex-direction: column;
}

.result-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #FFE8E8;
  flex-shrink: 0;
}

.result-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #C8102E;
  letter-spacing: 4rpx;
}

/* 分析内容 - 占满剩余空间 */
.analysis-content {
  flex: 1;
  padding: 30rpx 25rpx;
  background: #FFF5F5;
  border-radius: 16rpx;
  border: 2rpx solid #FFE8E8;
  display: flex;
  flex-direction: column;
}

.content-text {
  font-size: 30rpx;
  line-height: 56rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-word;
  display: block;
  flex: 1;
}
