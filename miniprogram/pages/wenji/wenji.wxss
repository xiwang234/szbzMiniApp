/* 隐私政策弹框 - 与首页相同 */
.privacy-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.privacy-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

.privacy-content {
  position: relative;
  width: 100%;
  max-width: 640rpx;
  background: linear-gradient(to bottom, #D4EFD4 0%, #FFFFFF 40%);
  border-radius: 32rpx;
  padding: 60rpx 50rpx 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease;
}

.privacy-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
}

.privacy-text {
  font-size: 26rpx;
  line-height: 44rpx;
  color: #555;
  margin-bottom: 50rpx;
  text-align: left;
}

.privacy-link {
  color: #07C160;
  font-weight: 500;
}

.privacy-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.privacy-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  padding: 0;
}

.privacy-btn::after {
  border: none;
}

.agree-btn {
  background: #2F3E3E;
  color: white;
}

.reject-btn {
  background: transparent;
  color: #666;
  font-size: 30rpx;
  height: auto;
  line-height: normal;
  padding: 20rpx 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0 120rpx;
  box-sizing: border-box;
}

/* 表单卡片 */
.form-card {
  margin: 0 30rpx;
  background: white;
  border-radius: 32rpx;
  padding: 40rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(200, 16, 46, 0.12);
  width: 690rpx;
  max-width: 100%;
}

/* 页面标题 */
.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #C8102E;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 4rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.label-icon {
  color: #C8102E;
  margin-right: 10rpx;
  font-size: 30rpx;
}

.label-tip {
  font-size: 22rpx;
  color: #999;
  margin-left: 6rpx;
  font-weight: 400;
}

/* 文本域输入 */
.textarea-input {
  width: 100%;
  min-height: 120rpx;
  background: #FFF5F5;
  border: 2rpx solid #FFE8E8;
  border-radius: 16rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  box-sizing: border-box;
}

.textarea-placeholder {
  color: #BBB;
}

/* 文本输入 */
.text-input {
  width: 100%;
  height: 80rpx;
  background: #FFF5F5;
  border: 2rpx solid #FFE8E8;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.input-placeholder {
  color: #BBB;
}

/* 字数统计 */
.char-count {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  margin-top: 6rpx;
}

/* 选择器包装 */
.picker-wrapper {
  background: #FFF5F5;
  border: 2rpx solid #FFE8E8;
  border-radius: 16rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 30rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-arrow {
  font-size: 24rpx;
  color: #C8102E;
}

/* 性别选择 */
.gender-section {
  margin-bottom: 30rpx;
}

.gender-tabs {
  display: flex;
  gap: 20rpx;
}

.gender-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  background: #FFF5F5;
  border: 3rpx solid #FFE8E8;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s ease;
}

.gender-tab.active.male {
  background: linear-gradient(135deg, #4A90E2 0%, #2E5C8A 100%);
  border-color: #4A90E2;
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3);
  transform: scale(1.02);
}

.gender-tab.active.female {
  background: linear-gradient(135deg, #FF6B9D 0%, #E91E63 100%);
  border-color: #FF6B9D;
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 157, 0.3);
  transform: scale(1.02);
}

.tab-icon {
  font-size: 38rpx;
  margin-bottom: 4rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #E63946 0%, #C8102E 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(230, 57, 70, 0.3);
}

.submit-btn::after {
  border: none;
}
